<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    android:gravity="center_horizontal"
    tools:context=".activity.TambahUsahaActivity">

    <ProgressBar
        android:id="@+id/progress_edit_business_profile"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:visibility="gone" />


    <ScrollView
        android:id="@+id/add_usaha_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/photo_profile"
                android:layout_width="200dp"
                android:layout_height="160dp"
                android:src="@drawable/logo"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                android:textColorHint="@color/colorGray"
                android:textColorHighlight="@color/colorGray"
                >

                <EditText
                    android:id="@+id/nama_usaha_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nama_usaha"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:maxLines="1"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:text="@string/nama_usaha"
                    android:textColor="@color/colorBlack"
                    android:textColorLink="@color/colorBlack"
                    android:theme="@style/InputBlackLine" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                android:textColorHint="@color/colorGray">

                <EditText
                    android:id="@+id/lama_usaha_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Berdiri Sejak"
                    android:text="20"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="numberSigned"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorLink="@color/colorBlack"
                    android:textColorHint="@color/colorGray"
                    android:theme="@style/InputBlackLine" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                android:textColorHint="@color/colorGray">

                <EditText
                    android:id="@+id/omzet_pertahun_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/omzet_pertahun"
                    android:text="20,000,000"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorLink="@color/colorBlack"
                    android:textColorHint="@color/colorGray"
                    android:theme="@style/InputBlackLine" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                android:textColorHint="@color/colorGray">

                <EditText
                    android:id="@+id/deskripsi_usaha_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/deskripsi_usaha"
                    android:text="usaha yang makmur sentosa"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:maxLines="3"
                    android:scrollbars="vertical"
                    android:textColor="@color/colorBlack"
                    android:textColorLink="@color/colorBlack"
                    android:textColorHint="@color/colorGray"
                    android:theme="@style/InputBlackLine" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                android:textColorHint="@color/colorGray">

                <EditText
                    android:id="@+id/alamat_usaha_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/alamat_usaha"
                    android:enabled="false"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:maxLines="3"
                    android:scrollbars="vertical"
                    android:textColor="@color/colorBlack"
                    android:textColorLink="@color/colorBlack"
                    android:textColorHint="@color/colorGray"
                    android:theme="@style/InputBlackLine" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                android:textColorHint="@color/colorGray">

                <EditText
                    android:id="@+id/email_usaha_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Usaha"
                    android:text="usaha@mail.com"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorLink="@color/colorBlack"
                    android:textColorHint="@color/colorGray"
                    android:theme="@style/InputBlackLine" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                android:textColorHint="@color/colorGray">

                <EditText
                    android:id="@+id/no_telepon_usaha_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nomor Telepon Usaha"
                    android:text="085373318178"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorLink="@color/colorBlack"
                    android:textColorHint="@color/colorGray"
                    android:theme="@style/InputBlackLine" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                android:textColorHint="@color/colorGray">

                <EditText
                    android:id="@+id/website_usaha_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/website"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorLink="@color/colorBlack"
                    android:textColorHint="@color/colorGray"
                    android:theme="@style/InputBlackLine" />
            </android.support.design.widget.TextInputLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:id="@+id/SosmedUsaha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sosial Media Usaha"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    />
                <LinearLayout
                    android:id="@+id/SosmedForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@id/SosmedUsaha"
                    android:orientation="vertical"
                    >

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                        android:textColorHint="@color/colorGray">

                        <EditText
                            android:id="@+id/facebook_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/facebook"
                            android:text="codepanda.id"
                            android:imeActionId="6"
                            android:imeActionLabel="@string/action_sign_in_short"
                            android:imeOptions="actionUnspecified"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/colorBlack"
                            android:textColorLink="@color/colorBlack"
                            android:textColorHint="@color/colorGray"
                            android:theme="@style/InputBlackLine" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                        android:textColorHint="@color/colorGray">

                        <EditText
                            android:id="@+id/twitter_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/twitter"
                            android:text=" @codepanda.id"
                            android:imeActionId="6"
                            android:imeActionLabel="@string/action_sign_in_short"
                            android:imeOptions="actionUnspecified"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/colorBlack"
                            android:textColorLink="@color/colorBlack"
                            android:textColorHint="@color/colorGray"
                            android:theme="@style/InputBlackLine" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                        android:textColorHint="@color/colorGray">

                        <EditText
                            android:id="@+id/id_line_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/id_line"
                            android:text=" @codepanda.id"
                            android:imeActionId="6"
                            android:imeActionLabel="@string/action_sign_in_short"
                            android:imeOptions="actionUnspecified"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/colorBlack"
                            android:textColorLink="@color/colorBlack"
                            android:textColorHint="@color/colorGray"
                            android:theme="@style/InputBlackLine" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                        android:textColorHint="@color/colorGray">

                        <EditText
                            android:id="@+id/instagram_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/instagram"
                            android:text=" @codepanda.id"
                            android:imeActionId="6"
                            android:imeActionLabel="@string/action_sign_in_short"
                            android:imeOptions="actionUnspecified"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/colorBlack"
                            android:textColorLink="@color/colorBlack"
                            android:textColorHint="@color/colorGray"
                            android:theme="@style/InputBlackLine" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </android.support.constraint.ConstraintLayout>
            <Button
                android:id="@+id/save_edit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/ic_store_black_24dp"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:background="@color/colorPurpleDark"
                android:text="SIMPAN"
                android:textColor="@color/colorWhite"
                />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>