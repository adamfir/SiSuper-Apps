<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurpleMedium"
    tools:context=".activity.BusinessListActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/action_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/card_usaha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_top"
        android:orientation="horizontal"
        android:background="@color/colorPurpleDark"

        >
        <ImageView
            android:id="@+id/business_pict"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/maskot"
            android:layout_margin="@dimen/paddingCard"
            android:background="@color/colorPurpleLight"
            />
        <android.support.constraint.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="96dp"
            android:background="@color/colorWhite"
            android:layout_margin="@dimen/paddingCard"
            >
            <TextView
                android:id="@+id/business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama_usaha"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/undangan"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_margin="@dimen/paddingCard"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/invitation_number"
                />
            <TextView
                android:id="@+id/invitation_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:layout_margin="@dimen/paddingCard"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_top"
        android:orientation="horizontal"
        android:background="@color/colorPurpleDark"

        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="96dp"
            android:background="@color/colorWhite"
            android:layout_margin="@dimen/paddingCard"
            >

            <Button
                android:id="@+id/addUsaha_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="+"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_bg_rounded_corners"
                />
            <TextView
                android:id="@+id/tambah_usaha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tambah_usaha"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>


</LinearLayout>