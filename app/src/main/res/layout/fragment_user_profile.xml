<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.UserProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/user_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/UserProfileFragment_img"
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:src="@drawable/logo"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                android:textColorHint="@color/colorGray"
                android:textColorHighlight="@color/colorGray"
                android:gravity="center"
                >
                <EditText
                    android:id="@+id/nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:enabled="false"
                    android:maxLines="1"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text="Ryan Azrian Syach"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textColorLink="@color/colorBlack"
                    android:theme="@style/InputWhiteLine" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                android:textColorHint="@color/colorGray"
                android:textColorHighlight="@color/colorGray"
                >

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_email"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:enabled="false"
                    android:maxLines="1"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:text="azrian.ryan@gmail.com"
                    android:textColor="@color/colorBlack"
                    android:textColorLink="@color/colorBlack"
                    android:theme="@style/InputBlackLine" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                android:textColorHint="@color/colorGray"
                android:textColorHighlight="@color/colorGray"
                >

                <EditText
                    android:id="@+id/phone_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nomor_telepon"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:enabled="false"
                    android:maxLines="1"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:text="085373318178"
                    android:textColor="@color/colorBlack"
                    android:textColorLink="@color/colorBlack"
                    android:theme="@style/InputBlackLine" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayoutWhite"
                android:textColorHint="@color/colorGray">

                <EditText
                    android:id="@+id/alamat_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/alamat_usaha"
                    android:text="Jl. Raya Dramaga"
                    android:enabled="false"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:maxLines="3"
                    android:scrollbars="vertical"
                    android:textColor="@color/colorBlack"
                    android:textColorLink="@color/colorBlack"
                    android:textColorHint="@color/colorGray"
                    android:theme="@style/InputBlackLine" />
            </android.support.design.widget.TextInputLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sertifikat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sertifikat"
                    android:textColor="@color/colorGray"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/sertifikat"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sertifikat Kepemimpinan"
                        android:textColor="@color/colorBlack"
                        />
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/maskot"
                        />
                    <Button
                        android:id="@+id/add_certificate"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/colorPurpleDark"
                        android:text="TAMBAH SERTIFIKAT"
                        android:drawableStart="@drawable/ic_format_list_bulleted_black_24dp"
                        android:paddingLeft="80dp"
                        android:paddingRight="80dp"
                        android:textColor="@color/colorWhite"
                        />

                    <Button
                        android:id="@+id/edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_person_black_24dp"
                        android:paddingLeft="80dp"
                        android:paddingRight="80dp"
                        android:background="@color/colorPurpleDark"
                        android:text="SUNTING PROFIL"
                        android:textColor="@color/colorWhite"
                        />


                </LinearLayout>

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>