<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurpleLight"
    tools:context=".fragment.EventListFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/event_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:background="@color/colorWhite">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPurpleDark"
            android:src="@drawable/logo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/button_font_size"
            android:textColor="@color/colorBlack"
            android:layout_margin="@dimen/paddingCard"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="2dp"
            android:text="3 Desember 2018"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_big"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/paddingCard"
            android:layout_marginRight="@dimen/paddingCard"
            android:layout_marginBottom="@dimen/paddingCard"
            android:text="Nama Kegiatan"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/button_font_size"
            android:textColor="@color/colorBlack"
            android:layout_margin="@dimen/paddingCard"
            android:drawableLeft="@drawable/ic_pin_drop_black_24dp"
            android:drawablePadding="2dp"
            android:text="Gedung X, Kementrian X"/>
    </LinearLayout>

</LinearLayout>
