<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/spacing_medium"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/image_event_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:background="@color/colorPurpleDark"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/date_event_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/button_font_size"
        android:textColor="@color/colorBlack"
        android:layout_margin="@dimen/paddingCard"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:drawablePadding="2dp"
        android:text="3 Desember 2018"/>
    <TextView
        android:id="@+id/name_event_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_big"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/paddingCard"
        android:layout_marginRight="@dimen/paddingCard"
        android:layout_marginBottom="@dimen/paddingCard"
        android:text="Nama Kegiatan"/>
    <TextView
        android:id="@+id/place_event_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/button_font_size"
        android:textColor="@color/colorBlack"
        android:layout_margin="@dimen/paddingCard"
        android:drawableLeft="@drawable/ic_pin_drop_black_24dp"
        android:drawablePadding="2dp"
        android:text="Gedung X, Kementrian X"/>
</LinearLayout>