<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurpleMedium"
    tools:context=".fragment.AgendaFragment"
    android:orientation="vertical"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo"
            android:background="@color/colorPurpleDark"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:textColor="@color/colorBlack"
            android:text="2018 - 05 - 03"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sertifikasi Halal"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_medium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gedung MUI yang Halal"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:drawableLeft="@drawable/ic_pin_drop_black_24dp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_medium"
            />


    </LinearLayout>

</LinearLayout>