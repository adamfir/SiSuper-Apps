<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurpleLight"
    tools:context=".fragment.ProductListFragment"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tambah_produk"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:textSize="@dimen/button_font_size"
        android:background="@drawable/rectangle_darkpurplebg_whitestroke"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:padding="@dimen/padding"
        android:background="@drawable/rectangle_whitebg_purplestroke">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:textSize="@dimen/button_font_size"
            android:textColor="@color/colorBlack"
            android:text="Nama Produk"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:textSize="@dimen/button_font_size"
            android:textColor="@color/colorBlack"
            android:text="Rp.200.000,00"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:textSize="@dimen/button_font_size"
            android:textColor="@color/colorBlack"
            android:text="/Pcs"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:padding="@dimen/padding"
        android:background="@drawable/rectangle_whitebg_purplestroke">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:textSize="@dimen/button_font_size"
            android:textColor="@color/colorBlack"
            android:text="Nama Produk"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:textSize="@dimen/button_font_size"
            android:textColor="@color/colorBlack"
            android:text="Rp.200.000,00"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:textSize="@dimen/button_font_size"
            android:textColor="@color/colorBlack"
            android:text="/Pcs"/>

    </LinearLayout>

</LinearLayout>
